#include<stdio.h>
#include <math.h>
int main()
{
    int f1,f2,f3,cases,amount;
    scanf("%d",&cases);
        while(cases--)
        {
           scanf("%d%d%d",&f1,&f2,&f3);
           amount=f3*(f1+(f1-f2))/(f1+f2);
           if(amount<=0)
           printf("0\n");
           else
           printf("%d\n",amount);
        }
    return 0;
}
 
